<script>
		
		document.getElementById('TempInput').addEventListener('input',
		function(e){
		var F = (e.target.value-32)*(5/9);
		var fn = F.toFixed(1);
	
		document.getElementById('degreesC').innerHTML = fn;
		});
</script>

